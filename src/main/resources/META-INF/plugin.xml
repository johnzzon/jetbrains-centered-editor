<idea-plugin>
  <id>dev.centered.editor</id>
  <name>Centered Editor Only</name>
  <vendor email="you@example.com">You</vendor>
  <version>1.0.0</version>
  <description>Centers the code editor pane visually by padding the editor content. Nothing else.</description>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <editorFactoryListener implementation="dev.centered.CenteredEditorListener"/>
    <applicationService serviceImplementation="dev.centered.CenteredSettings"/>
  </extensions>
</idea-plugin>
